%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'Warehouse', root_path, id: 'logo'
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", root_path
          %li= link_to "Help", help_path
          - if signed_in?
            %li= link_to "Users","#"
            %li.dropdown{id:"fat-menu"}
              %a.dropdown-toggle{"data-toggle"=>"dropdown",href:'#'}Account
              %ul.dropdown-menu
                %li= link_to 'Profile', current_user
                %li= link_to 'Settings', '#'
                %li.divider
                %li=link_to 'Sign Out', signout_path, method: "delete"
          - else
            %li=link_to 'Sign In', signin_path
