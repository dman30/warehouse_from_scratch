- provide(:title,'Account erstellen')
%h1= 'Account erstellen'
.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      = f.label :name
      = f.text_field :name

      = f.label :email
      = f.text_field :email

      = f.label :password, "Passwort"
      = f.password_field :password

      = f.label :password_confirmation, "Best√§tigung"
      = f.password_field :password_confirmation

      = f.submit "Meinen Account erstellen", class:"btn btn-large btn-primary"
